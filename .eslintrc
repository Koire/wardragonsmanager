{
    "extends": [
        "plugin:prettier/recommended",
        "eslint:recommended"
    ],
    "plugins": ["prettier"],
    "env": {
        "es2017": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "prettier/prettier": "error",
        "no-unused-vars": 2,
        "linebreak-style": "off",
        "indent": ["error", 4],
        "quotes": ["warn","double"],
        "max-lines-per-function": ["error", 20],
        "no-delete-var": "error",
        "no-var": "error"
    }
}